extends ./layout/index

block contenido 
     main.container.mt-5
        h1.text-center.mt-5 #{pagina}

        include ./layout/blockTestimoniales


        .row
            .col-md-12
                h2.d-block.w-100.text-center Agrega un Testimonial

                if(errores)
                    each error in errores
                        .alert-col.alert-danger.text-center.my-3.py-2 #{error.mensaje}

            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimoniales" method="POST")
                        .form-group
                            label(for="nombre") Nombre
                            input#nombre.form-control(type="text", placeholder="Tu Nombre", name="nombre", value= nombre)
                        .form-group
                            label(for="correo") Correo
                            input#correo.form-control(type="email" placeholder="Tu correo", name="correo", value= correo)
                        .form-group
                            label(for="mensaje") Mensaje
                            textarea#mensaje.form-control(type="email", placeholder="Tu mensaje", rows=3, name="mensaje") #{mensaje}

                        input.btn.btn-success.btn-block(type="submit", value="Enviar")

