.row.proximos-viajes
    each viaje in viajes
        .col-md-6.col-lg-4.mb-4
            .card
                img(src=`img/destinos_${viaje.imagen}.jpg`, alt="Imagen").card-img-top
                .card-body
                    h2 #{viaje.titulo}
                    p
                        svg.icon.icon-tabler.icon-tabler-calendar-minus(xmlns='http://www.w3.org/2000/svg' width='40' height='40' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round')
                            path(stroke='none' d='M0 0h24v24H0z' fill='none')
                            rect(x='4' y='5' width='16' height='16' rx='2')
                            line(x1='16' y1='3' x2='16' y2='7')
                            line(x1='8' y1='3' x2='8' y2='7')
                            line(x1='4' y1='11' x2='20' y2='11')
                            line(x1='10' y1='16' x2='14' y2='16')

                        | #{viaje.fecha_ida} - #{viaje.fecha_vuelta}

                    p
                        svg.icon.icon-tabler.icon-tabler-user(xmlns='http://www.w3.org/2000/svg' width='40' height='40' viewbox='0 0 24 24' stroke-width='1.5' stroke='#dc135f' fill='none' stroke-linecap='round' stroke-linejoin='round')
                            path(stroke='none' d='M0 0h24v24H0z' fill='none')
                            circle(cx='12' cy='7' r='4')
                            path(d='M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2')

                        | #{viaje.disponibles} Disponibles

                    p #{viaje.descripcion.substr(0, 100) + '...'}

                    a(href=`viajes/${viaje.slug}`).btn.btn-success.btn-block Más información